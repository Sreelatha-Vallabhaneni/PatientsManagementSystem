
model User {
  id       Int     @id @default(autoincrement())  // âœ… MUST be Int
  username String  @unique
  password String
  role     Role
}

model Patient {
  id           String   @id @default(uuid())
  firstName    String
  lastName     String
  email        String   @unique
  phoneNumber  String
  dob          DateTime
}



enum Role {
  ADMIN
  USER
}




datasource db {
  provider = "postgresql" // or "mysql" or "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}
